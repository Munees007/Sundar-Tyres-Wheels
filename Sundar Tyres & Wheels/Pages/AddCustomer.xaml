<Page x:Class="Sundar_Tyres___Wheels.Pages.AddCustomer"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Sundar_Tyres___Wheels.Pages"
      mc:Ignorable="d" 
      Background="White"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddCustomer">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="25" Orientation="Vertical">
            <TextBlock FontWeight="ExtraBlack" FontSize="30">General Details</TextBlock>
            <Grid >
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock FontSize="22" Margin="50,20,0,0" Text="Name" Grid.Row="0" Grid.Column="0"/>
                <TextBox x:Name="Name" Style="{StaticResource RoundedTextBox}" Background="#D9D9D9" Margin="50,20,150,0" Grid.Row="0" Grid.Column="1"/>
                <TextBlock FontSize="22" Margin="50,20,0,0" Text="Contact" Grid.Row="1" Grid.Column="0"/>
                <TextBox x:Name="Contact" Style="{StaticResource RoundedTextBox}" Background="#D9D9D9" Margin="50,20,150,0" Grid.Row="1" Grid.Column="1"/>
            </Grid>
            <TextBlock Margin="0,20,0,0" FontWeight="ExtraBlack" FontSize="30">Address Details</TextBlock>
            <Grid Margin="50,10,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock FontSize="22" Margin="50,20,0,0" Text="Address" Grid.Row="0" Grid.Column="0"/>
                <RichTextBox x:Name="Address" Height="100" Background="#D9D9D9" Margin="50,20,150,0" Grid.Row="0" Grid.Column="1"/>
                <TextBlock FontSize="22" Margin="50,20,0,0" Text="Area" Grid.Row="1" Grid.Column="0"/>
                <TextBox x:Name="Area" Style="{StaticResource RoundedTextBox}" Background="#D9D9D9" Margin="50,20,150,0" Grid.Row="1" Grid.Column="1"/>
                <TextBlock FontSize="22" Margin="50,20,0,0" Text="City" Grid.Row="2" Grid.Column="0"/>
                <TextBox x:Name="City" Style="{StaticResource RoundedTextBox}" Background="#D9D9D9" Margin="50,20,150,0" Grid.Row="2" Grid.Column="1"/>
                <TextBlock FontSize="22" Margin="50,20,0,0" Text="District" Grid.Row="3" Grid.Column="0"/>
                <ComboBox x:Name="District" Background="#D9D9D9" Style="{StaticResource RoundedComboBox}" Margin="50,20,150,0"  Grid.Row="3" Grid.Column="1">
                    <ComboBoxItem Content="Ariyalur"/>
                    <ComboBoxItem Content="Chengalpattu"/>
                    <ComboBoxItem Content="Chennai"/>
                    <ComboBoxItem Content="Coimbatore"/>
                    <ComboBoxItem Content="Cuddalore"/>
                    <ComboBoxItem Content="Dharmapuri"/>
                    <ComboBoxItem Content="Dindigul"/>
                    <ComboBoxItem Content="Erode"/>
                    <ComboBoxItem Content="Kallakurichi"/>
                    <ComboBoxItem Content="Kanchipuram"/>
                    <ComboBoxItem Content="Kanyakumari"/>
                    <ComboBoxItem Content="Karur"/>
                    <ComboBoxItem Content="Krishnagiri"/>
                    <ComboBoxItem Content="Madurai"/>
                    <ComboBoxItem Content="Mayiladuthurai"/>
                    <ComboBoxItem Content="Nagapattinam"/>
                    <ComboBoxItem Content="Namakkal"/>
                    <ComboBoxItem Content="Nilgiris"/>
                    <ComboBoxItem Content="Perambalur"/>
                    <ComboBoxItem Content="Pudukkottai"/>
                    <ComboBoxItem Content="Ramanathapuram"/>
                    <ComboBoxItem Content="Ranipet"/>
                    <ComboBoxItem Content="Salem"/>
                    <ComboBoxItem Content="Sivaganga"/>
                    <ComboBoxItem Content="Tenkasi"/>
                    <ComboBoxItem Content="Thanjavur"/>
                    <ComboBoxItem Content="Theni"/>
                    <ComboBoxItem Content="Thoothukudi"/>
                    <ComboBoxItem Content="Tiruchirappalli"/>
                    <ComboBoxItem Content="Tirunelveli"/>
                    <ComboBoxItem Content="Tirupattur"/>
                    <ComboBoxItem Content="Tiruppur"/>
                    <ComboBoxItem Content="Tiruvallur"/>
                    <ComboBoxItem Content="Tiruvannamalai"/>
                    <ComboBoxItem Content="Tiruvarur"/>
                    <ComboBoxItem Content="Vellore"/>
                    <ComboBoxItem Content="Viluppuram"/>
                    <ComboBoxItem Content="Virudhunagar"/>
                </ComboBox>

                <TextBlock FontSize="22" Margin="50,20,0,0" Text="State" Grid.Row="4" Grid.Column="0"/>
                <ComboBox x:Name="State" Background="#D9D9D9" Style="{StaticResource RoundedComboBox}" Margin="50,20,150,0" Grid.Row="4" Grid.Column="1">
                    <ComboBoxItem Content="Tamil Nadu"/>
                </ComboBox>
                <TextBlock FontSize="22" Margin="50,20,0,0" Text="Country" Grid.Row="5" Grid.Column="0"/>
                <ComboBox x:Name="Country" Background="#D9D9D9" Style="{StaticResource RoundedComboBox}" Margin="50,20,150,0" Grid.Row="5" Grid.Column="1">
                    <ComboBoxItem Content="India"/>
                </ComboBox>
                <TextBlock FontSize="22" Margin="50,20,0,0" Text="Pin Code" Grid.Row="6" Grid.Column="0"/>
                <TextBox x:Name="PinCode" Style="{StaticResource RoundedTextBox}" Background="#D9D9D9" Margin="50,20,150,0" Grid.Row="6" Grid.Column="1"/>
                <TextBlock FontSize="22" Margin="50,20,0,0" Text="Nationality" Grid.Row="7" Grid.Column="0"/>
                <ComboBox x:Name="Nationality" Background="#D9D9D9" Style="{StaticResource RoundedComboBox}" Margin="50,20,150,0" Grid.Row="7" Grid.Column="1">
                    <ComboBoxItem Content="Indian"/>
                </ComboBox>
            </Grid>
            <TextBlock Margin="0,20,0,0" FontWeight="ExtraBlack" FontSize="30">Contact Details</TextBlock>
            <Grid Margin="0,10,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock FontSize="22" Margin="50,20,0,0" Text="Mobile No 1:" Grid.Row="0" Grid.Column="0"/>
                <TextBox x:Name="MobileNo1" Style="{StaticResource RoundedTextBox}"  Background="#D9D9D9" Margin="50,20,150,0" Grid.Row="0" Grid.Column="1"/>
                <TextBlock FontSize="22" Margin="50,20,0,0" Text="Mobile No 2:" Grid.Row="1" Grid.Column="0"/>
                <TextBox x:Name="MobileNo2" Style="{StaticResource RoundedTextBox}" Background="#D9D9D9" Margin="50,20,150,0" Grid.Row="1" Grid.Column="1"/>
                <TextBlock FontSize="22" Margin="50,20,0,0" Text="Email" Grid.Row="2" Grid.Column="0"/>
                <TextBox x:Name="Email" Style="{StaticResource RoundedTextBox}" Background="#D9D9D9" Margin="50,20,150,0" Grid.Row="2" Grid.Column="1"/>
                <TextBlock FontSize="22" Margin="50,20,0,0" Text="Website" Grid.Row="3" Grid.Column="0"/>
                <TextBox x:Name="Website" Style="{StaticResource RoundedTextBox}" Margin="50,20,150,0" Background="#D9D9D9" Grid.Row="3" Grid.Column="1">
                </TextBox>
                <TextBlock FontSize="22" Margin="50,20,0,0" Text="Is SMS Allowed" Grid.Row="4" Grid.Column="0"/>
                <CheckBox x:Name="isSmsAllowed" Grid.Row="4" Margin="50,20,150,0" Grid.Column="1">
                </CheckBox>
                <TextBlock FontSize="22" Margin="50,20,0,0" Text="Is E-mail Allowed" Grid.Row="5" Grid.Column="0"/>
                <CheckBox x:Name="isEmailAllowed" Grid.Row="5" Margin="50,20,150,0" Grid.Column="1">
                </CheckBox>
                <TextBlock FontSize="22" Margin="50,20,0,0" Text="Is WhatsApp Allowed" Grid.Row="6" Grid.Column="0"/>
                <CheckBox x:Name="isWhatsappAllowed" Background="#D9D9D9" Margin="50,20,150,0" Grid.Row="6" Grid.Column="1"/>
            </Grid>
            <Button Click="Submit" Style="{StaticResource RoundedButton}" Margin="250,10" Height="35" Cursor="Hand" Foreground="Black" Background="LightGreen">Submit</Button>
        </StackPanel>
    </ScrollViewer>
</Page>
